include ./style.conf
# STYLE:

# THEME
theme Catppuccin-Frappe
confirm_os_window_close 0
#background_blur 1 # Only on KDE
background_opacity 0.95
#window_margin_width 2 1 1
window_padding_width 2 1 1
hide_window_decorations yes
wayland_titlebar_color system

font_family      MonaspiceKr Nerd Font Mono
disable_ligatures always
font_size        16
bold_font        auto
italic_font      auto
bold_italic_font auto
mouse_hide_wait  3.0
cursor_shape     block
url_color        #00FFFF
url_style        dashed


